<!--DASHBOARD SECTION-->
<header id="main-header" class="py-2 bg-primary text-white">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1><i class="fa fa-gear"></i> Dashboard</h1>
      </div>
    </div>
  </div>
</header>

<!-- ACTIONS -->
<section id="actions" class="py-4 mb-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <a href="/books/all/all/1" class="btn btn-primary btn-block">
          <i class="fa fa-plus"></i> Issue Book
        </a>
      </div>


      <div class="col-md-4">
        <a href="/books/return-renew" class="btn btn-info btn-block">
          <i class="fa fa-retweet"></i> Renew/Return Book
        </a>
      </div>


      <div class="col-md-4">
        <a href="" class="btn btn-danger btn-block" data-toggle="modal" data-target="#payFineModal">
          <i class="fa fa-credit-card"></i> Pay fines
        </a>
      </div>
    </div>
  </div>
</section>


<section id="home" class="mt-4">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="card">
          <img src="/images/<%=user.image||"profile.png" %>" class="card-img-top p-1" alt="...">
          <div class="card-body">
            <p>Name : <%=user.firstName%> <%=user.lastName%></p>
            <p>Email : <%=user.email%></p>
            <p>Book Issued : <%=user.bookIssueInfo.length%></p>
            <p>Due : $<%=user.fines%></p>
            <p>Flagged : <%=user.violationFlag%></p>
            <p>Joined : <%=user.joined.toDateString() %></p>
          </div>
        </div>
      </div>
      <div class="col-md-9">

        <div class="card">
          <div class="card-header text-center">
            <h4>Recent Activities</h4>
          </div>
          <table id="activitiesTable" class="table table-striped">
            <thead class="thead-inverse">
              <tr>
                <th>Info</th>
                <th>Category</th>
                <th>Date</th>
              </tr>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<!--PAY FINE MODAL-->
<div class="modal fade" id="payFineModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="payFineModalLabel">
          This route is still under development. will be added in next version
        </h5>
        <button class="close" data-dismiss="modal"><span>&times;</span></button>
      </div>
    </div>
  </div>
</div>